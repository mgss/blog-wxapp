<view class="section slides small">
  <video 
      src="{{ entity.video }}"
      poster="{{ entity.image }}" 
      duration="{{ item.duration_raw }}"
      controls="{{ true }}"
      objectFit="cover"/>
  <view class="content centered">
    <view class="header">
      {{ entity.header }}
      <view class="sub-header">{{ entity.original_header }}</view>
    </view>
    <view class="description">{{ entity.description }}</view>
  </view>
</view>